@model Template.Models.Event

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <div class="tabs_main">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#home">Courses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#menu1">Events</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="home" class="tab-pane fade">



                <div class="clearfix"></div>
            </div>
            <div id="menu1" class="tab-pane active">
                <div class="event_main event_maindtl">
                    <div class="event_img">
                        <img src="@Html.DisplayFor(modelItem => Model.Picture)">
                    </div>

                    <div class="event_infos">
                        <h3>@Html.DisplayFor(modelItem => Model.Name)</h3>
                        <h4>Detail</h4>
                        <p>@Html.DisplayFor(modelItem => Model.Detail)</p>
                        <h4>Requirement</h4>
                        <p>@Html.DisplayFor(modelItem => Model.Requirement)</p>
                        <div class="ev_timedate"><span><i class="fa fa-clock-o" aria-hidden="true"></i> @Html.DisplayFor(modelItem => Model.Time)</span><span><i class="fa fa-clock-o" aria-hidden="true"></i> @Html.DisplayFor(modelItem => Model.StartDate)</span> </div>
                        <div class="ev_location"><i class="fa fa-map-marker" aria-hidden="true"></i> <a href="#">@Html.DisplayFor(modelItem => Model.Location)</a></div>
                        <div class="ev_join"><a href="@Url.Action("Detailsubmit", "Events",new { id = Model.Id, userId = 1 })">Join Now</a></div>
                    </div>

                    <div class="clearfix"></div>
                </div><!--event_main-->

                <div class="clearfix"></div>
            </div>
        </div>

    </div>
</div>
